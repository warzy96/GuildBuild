<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.fer.amigosi.guildbuild.AddGoalActivity"
    android:background="@color/colorPrimaryDark"><![CDATA[>]]>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="@string/add_subgoal"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewClass"
                android:text="Goal: "
                android:textSize="50px"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/spinnerGoals"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"></Spinner>
        </LinearLayout>


        <EditText
            android:id="@+id/subgoalToAdd"
            style="@style/editText_style"
            android:hint="Subgoal name"
            android:inputType="textPersonName"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/hintColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnAddSGoal1"
                style="@style/button_style"
                android:layout_weight="1"
                android:text="@string/add_subgoal" />

        </LinearLayout>

    </LinearLayout>

</android.widget.RelativeLayout>
